<?xml version="1.0"?>
<openerp>
    <data>
        <record id="project_form" model="ir.ui.view">
            <field name="name">project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <page string="Project Stages" position="after">
                    <page string="Project Specifications">
                        <group>
                            <field name="project_number"/>
                            <field name="sale_order_id" domain="[('partner_id', '=', partner_id)]"/>
                        </group>
                            <div class="oe_clear">
                                <label for="partner_ids"/>
                            </div>
                            <field name="partner_ids" widget="many2many">
                                <tree>
                                    <field name="name"/>
                                    <field name="function"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                            <div class="oe_clear">
                                <label for="deliverable_ids"/>
                            </div>
                            <field name="deliverable_ids" readonly="True">
                                <tree>
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="next_action"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                            <div class="oe_clear">
                                <label for="pre_project_implementation_observations"/>
                            </div>
                            <field name="pre_project_implementation_observations"/>
                            <div class="oe_clear">
                                <label for="post_project_observations"/>
                            </div>
                            <field name="post_project_observations"/>
                            <div class="oe_clear">
                                <label for="post_project_leader_observations"/>
                            </div>
                            <field name="post_project_leader_observations"/>
                    </page>
                </page>
            </field>
        </record>
        
    </data>
</openerp>
