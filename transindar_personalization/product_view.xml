                </group>
                <field name="replenishment_cost_last_update" position="attributes">
                    <attribute name="attrs">{'invisible':False , 'readonly':True}</attribute>
                </field>
                <label for="replenishment_base_cost" position="attributes">
                    <attribute name="attrs">{'invisible':False , 'readonly':True}</attribute>
