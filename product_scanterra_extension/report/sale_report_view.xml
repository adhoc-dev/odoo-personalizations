<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_order_product_tree" model="ir.ui.view">
        <field name="name">sale.report.tree</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_tree"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="type_id" invisible="1"/>
                <field name="segment_id" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="view_order_product_search" model="ir.ui.view">
        <field name="name">sale.report.search</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="type_id"/>
                <field name="segment_id"/>
            </field>
            <filter string="Category of Product" position="after">
                <filter string="Product Type" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type_id'}"/>
                <filter string="Product Segment" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'segment_id'}"/>
            </filter>   
        </field>
    </record>

</data>
</openerp>
